extends layout
block content
    link(rel="stylesheet" href="/stylesheets/components/layout.css")
    link(rel="stylesheet" href="/stylesheets/pages/questions.css")
    H1.questions_title All Questions
        div.questions_container_big
            div.title_container
                span.vote_count Votes
                span.title_of_question Question
                span.answer_count Answers
            if questions.length
                each question in questions
                    div.question
                        span(id=`questions-${question.id}-vote-count`) ğŸ‘ #{question.voteCount}
                        a(href=`/questions/${question.id}`) #{question.title}
                        span(id=`questions-${question.id}-answer-count`) ğŸ’¬ #{question.Answers.length}
            else
                p No questions yet.
            div.page_links
                if currentPage !== 1
                    a(href=`/questions?page=${currentPage-1}`) Prev
                    a(href=`/questions?page=${1}`) First page
                if pageNumbers[0] > 1
                    p ...
                each page in pageNumbers
                    a(href=`/questions?page=${page}`) #{page}
                if pageNumbers[pageNumbers.length-1] < amountOfPages
                    p ...
                if currentPage !== amountOfPages
                    a(href=`/questions?page=${amountOfPages}`) Last Page
                    a(href=`/questions?page=${currentPage+1}`) Next
    script(src='../javascripts/index.js' type='module')
